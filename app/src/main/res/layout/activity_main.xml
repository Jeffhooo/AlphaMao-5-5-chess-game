            android:id="@+id/cell_2"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_heigth"
            android:src="@drawable/blank"/>
    </TableRow>

    <TableRow>
        <com.jeff.alphamao.MyImageView
            android:id="@+id/cell_3"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_heigth"
            android:src="@drawable/blank"/>
        <com.jeff.alphamao.MyImageView
            android:id="@+id/cell_4"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_heigth"
            android:src="@drawable/blank"/>
        <com.jeff.alphamao.MyImageView
            android:id="@+id/cell_5"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_heigth"
            android:src="@drawable/blank"/>
    </TableRow>

    <TableRow>
        <com.jeff.alphamao.MyImageView
            android:id="@+id/cell_6"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_heigth"
            android:src="@drawable/blank"/>
        <com.jeff.alphamao.MyImageView
            android:id="@+id/cell_7"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_heigth"
            android:src="@drawable/blank"/>
        <com.jeff.alphamao.MyImageView
            android:id="@+id/cell_8"
            android:layout_width="@dimen/cell_width"
            android:layout_height="@dimen/cell_heigth"
            android:src="@drawable/blank"/>
    </TableRow>


</TableLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp"
        />

    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="reset"
        />

    <Switch
        android:id="@+id/cross_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cross First "
        android:layout_gravity="end"
        android:textAlignment="textEnd"/>

</LinearLayout>